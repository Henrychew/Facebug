<div class="container">
  <h1>Welcome!<h1>
    <h2><%=@user.firstname%></h2>
    <p><%= @user.email%></p>

<form action="/new_status" method="post">
  <b><p>Post a status<p><b>

  <b><p>Name<p></b>
  <input type="text" name="post[name]" placeholder= "name"><br>
  <b><p>Title<p></b>
  <input type="text" name="post[title]" placeholder="title">

  <select name="tag[name]">
      <option> - Tag - </option>
      <option value="Food">Food</option>
      <option value="Property">Property</option>
      <option value="Lifestyles">Lifestyles</option>
      <option value="Car">Car</option>
      <option value="Music">Music</option>
      <option value="Fashion">Fashion</option>
      <option value="Entertainment">Entertainment</option>
      <option value="Technology">Technology</option>
  </select><br>




  <b><p>Body<p></b>
  <textarea name= "post[body]" rows= 10 cols= 70></textarea><br><br>

  <input type= "submit" value= "Post Status"><br><br>

  <%= @error if @error %>


  <a href="/log_out">Log out</a>
</form>
</div>
<br>
<div class="container"><br>
<h1>News Feed</h1><br>
<% unless @posts.nil? %>
  <p><% @posts.each do |post|%>
      <h2><%=post.name %></h2>
      <h3><%=post.title %></h3><br><br>
      <%=post.body %><br><br><br><br><br>



      <form action="/post/<%= post.id %>" method="post">
          <!-- <input name="_method" type="hidden" value="edit" />
          <input type= "submit" value= "Edit"> -->
          <a href="/post/<%= post.id %>/edit">Edit</a>

     <!--  <a href="/delete_post/<%= post.id %>">Delete</a> -->
          <input name="_method" type="hidden" value="delete" />
          <input type= "submit" value= "Delete"><br><br><br><br><br>
      </form>

      <% end %>
    </p>
<% end %>
</div>


