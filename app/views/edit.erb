<div class="container">
  <h1>Update your status?</h1>

<form action="/update/<%= @post.id %>" method="post">
  <b><p>Post a status<p><b>

  <b><p>Name<p></b>
  <input type="text" name="post[name]" placeholder= "name" value=<%= @post.name%> ><br>
  <b><p>Title<p></b>
  <input type="text" name="post[title]" placeholder="title" value=<%= @post.title%> >

  <select name="tag[name]">
      <option> - Tag - </option>
      <option value="Food">Food</option>
      <option value="Property">Property</option>
      <option value="Lifestyles">Lifestyles</option>
      <option value="Car">Car</option>
      <option value="Music">Music</option>
      <option value="Fashion">Fashion</option>
      <option value"Entertainment">Entertainment</option>
      <option value="Technology">Technology</option>
  </select><br>




  <b><p>Body<p></b>
  <textarea name= "post[body]" rows= 10 cols= 70><%= @post.body %> </textarea><br><br>

  <input type= "submit" value= "Post Status"  ><br><br>

  <%= @error if @error %>